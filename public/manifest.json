      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Voice Search",
      "short_name": "Voice Search",
      "description": "Start voice shopping search",
      "url": "/voice-shopping",
      "icons": [
        {
          "src": "/icons/voice-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Marketplace",
      "short_name": "Marketplace",
      "description": "Browse products",
      "url": "/marketplace",
      "icons": [
        {
          "src": "/icons/marketplace-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Saved Deals",
      "short_name": "Saved",
      "description": "View saved deals",
      "url": "/saved-deals",
      "icons": [
        {
          "src": "/icons/saved-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "omniverse.AI Homepage on Desktop"
    },
    {
      "src": "/screenshots/mobile-voice-search.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Voice Search on Mobile"
    },
    {
      "src": "/screenshots/mobile-marketplace.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Product Marketplace on Mobile"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+omniverse",
      "url": "/?action=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}
